@model CharacterSheet.MVC.Models.Character

@{
    ViewData["Title"] = "AddChar";
}



<h4>Add Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddChar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CharID" class="control-label">Character ID</label>
                <input asp-for="CharID" class="form-control" />
                <span asp-validation-for="CharID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Character" class="btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route="@ViewData["path"]" >Back to Campaign</a>
</div>

