@model CharacterSheet.MVC.Models.Campaign

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Campaign</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                Characters
            </div>
            @foreach (var item in (IEnumerable<Character>)ViewData["Characters"])
            {
                <div class="form-group">
                    @item.Name
                    @Html.ActionLink("Details", "Details", "Character", new { id = item.CharID }) |
                    @Html.ActionLink("Remove", "RemoveChar", new { id = item.CharID })
                </div>
            }
            <a asp-action="AddChar" class="btn btn-primary">Add Character</a>
            <a asp-action="AddGM" class="btn btn-primary">Add GM</a>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
