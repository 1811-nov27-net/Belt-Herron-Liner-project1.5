@model CharacterSheet.MVC.Models.Campaign

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Campaign</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CampID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CampID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Characters
        </dt>
        @foreach (var item in (IEnumerable<Character>)ViewData["Characters"])
        {
        <dd class="col-sm-10">
            @item.Name 
            @Html.ActionLink("Details", "Details", new { id = item.CharID }) |
        </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CampID }) |
    <a asp-action="Index">Back to List</a>
</div>
