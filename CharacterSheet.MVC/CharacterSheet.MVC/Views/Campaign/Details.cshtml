@model CharacterSheet.MVC.Models.Campaign

@{
    ViewData["Title"] = "Details";
}

<h1>Campaign Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Characters
        </dt>
        @foreach (var item in (IEnumerable<Character>)ViewData["Characters"])
        {
            <dd class="col-sm-10">
                @item.Name

                @Html.ActionLink("Details", "Details", "Character", new { id = item.CharID }) |
            </dd>
            <dd>
                @item.AC
            </dd>
            <dd>
                @item.BaseAttackBonus
            </dd>
            <dd>
                @item.EffectiveSavingThrows["Fort"]
            </dd>
            <dd>
                @item.EffectiveSavingThrows["Will"]
            </dd>
            <dd>
                @item.EffectiveSavingThrows["Reflex"]
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CampID }) |
    <a asp-action="Index">Back to List</a>
</div>
